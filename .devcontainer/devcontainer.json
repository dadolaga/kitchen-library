{
    "name": "Kitchen library DEV",
    "image": "node:lts",
    "forwardPorts": [
        "3000:3000"
    ],
    "portsAttributes": {
        "3000": {
            "label": "Application"
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind"
    ], 
    "shutdownAction": "stopContainer",
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "formulahendry.auto-rename-tag"
            ]
        }
    }
}